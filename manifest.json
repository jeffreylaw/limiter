{
    "manifest_version": 2,
    "name": "Limiter",
    "version": "3.2.1",
    "description": "Limit the number of times you can visit a website in a custom period of time.",
    "browser_action": {
        "default_title": "Limiter",
        "default_popup": "popup.html",
        "default_icon": "./images/clock.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["*://*/*", "tabs", "storage", "activeTab", "webNavigation", "history"],
    "web_accessible_resources": [
        "images/*",
        "about.html",
        "howto.html"
    ],
    "icons": { 
        "16": "images/clock.png",
        "48": "images/clock.png",
       "128": "images/clock.png" 
    }
}